[
  {
    "bindings": {
      //Navigation
      "ctrl-h": ["workspace::ActivatePaneInDirection", "Left"],
      "ctrl-j": ["workspace::ActivatePaneInDirection", "Down"],
      "ctrl-k": ["workspace::ActivatePaneInDirection", "Up"],
      "ctrl-l": ["workspace::ActivatePaneInDirection", "Right"],

      //Menu
      "alt-j": "menu::SelectNext",
      "alt-k": "menu::SelectPrev",
      "enter": "menu::Confirm",
      "escape": "menu::Cancel",

      "ctrl-shift-h": "workspace::ToggleLeftDock",
      "ctrl-shift-j": "workspace::ToggleBottomDock",
      "ctrl-shift-l": "workspace::ToggleRightDock",

      "f11": "zed::ToggleFullScreen",
      ":": "command_palette::Toggle"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "escape": "editor::Cancel",
      "backspace": "editor::Backspace",
      "delete": "editor::Delete",
      "tab": "editor::Tab"
    }
  },
  {
    "context": "Pane",
    "bindings": {
      //Navigation
      "alt-h": "pane::ActivatePrevItem",
      "alt-l": "pane::ActivateNextItem"
    }
  },
  {
    "context": "Editor && (mode == single_line || mode == auto_height)",
    "bindings": {
      "alt-h": "editor::MoveLeft",
      "alt-l": "editor::MoveRight"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "escape": "editor::Cancel",
      "backspace": "editor::Backspace"
    }
  },
  {
    "context": "VimControl",
    "bindings": {
      //Cursor keys
      "h": "vim::Left",
      "j": "vim::Down",
      "k": "vim::Up",
      "l": "vim::Right"
    }
  },
  {
    "context": "VimControl && !menu",
    "bindings": {
      //Word motion
      "w": "vim::NextWordStart",
      "b": "vim::PreviousWordStart",
      "e": "vim::NextWordEnd",
      "shift-w": "vim::NextSubwordStart",
      "shift-b": "vim::PreviousSubwordStart",
      "shift-e": "vim::NextSubwordEnd",
      //Search
      "/": "vim::Search",
      "?": "pane::DeploySearch",
      //Numbers
      "0": ["vim::Number", 0],
      "1": ["vim::Number", 1],
      "2": ["vim::Number", 2],
      "3": ["vim::Number", 3],
      "4": ["vim::Number", 4],
      "5": ["vim::Number", 5],
      "6": ["vim::Number", 6],
      "7": ["vim::Number", 7],
      "8": ["vim::Number", 8],
      "9": ["vim::Number", 9],
      //Search
      "alt-j": "vim::MoveToNextMatch",
      "alt-k": "vim::MoveToPrevMatch",
      //Tabs
      // "alt-h": "pane::ActivatePrevItem",
      // "alt-l": "pane::ActivateNextItem",
      //Other
      "ctrl-w": "pane::CloseActiveItem",
      "space w": "workspace::Save",
      "space q": "workspace::CloseWindow",
      //G actions
      "g g": "vim::StartOfDocument",
      "shift-g": "vim::EndOfDocument",

      "shift-j": ["workspace::SendKeystrokes", "1 0 j"],
      "shift-k": ["workspace::SendKeystrokes", "1 0 k"]
    }
  },
  {
    "context": "Editor && vim_mode == insert",
    "bindings": {
      ":": null
    }
  },
  {
    "context": "vim_mode == normal",
    "bindings": {
      //Insert
      "i": "vim::InsertBefore",
      "shift-i": "vim::InsertFirstNonWhitespace",
      "a": "vim::InsertAfter",
      "shift-a": "vim::InsertEndOfLine",
      //Visual
      "v": "vim::ToggleVisual",
      "shift-v": "vim::ToggleVisualLine",
      //Undo Redo
      "u": "vim::Undo",
      "ctrl-r": "vim::Redo",
      //Yank
      "y": ["vim::PushOperator", "Yank"],
      "shift-y": "vim::YankLine",
      //Paste
      "p": "vim::Paste",
      "shift-p": [
        "vim::Paste",
        {
          "before": true
        }
      ],
      //New line
      "o": "vim::InsertLineBelow",
      "shift-o": "vim::InsertLineAbove",
      //Delete
      "d": ["vim::PushOperator", "Delete"],
      "shift-d": "vim::DeleteToEndOfLine",
      //Other
      // "space": "vim::PushOperator",
      "space h": "editor::Fold",
      "space l": "editor::UnfoldLines",
      "space o": "outline::Toggle",
      "space g": "go_to_line::Toggle",
      //G actions
      "g c": "vim::ToggleComments",
      "g r": "editor::Rename",
      "g a": "editor::ToggleCodeActions",

      "space i a": [
        "assistant::InlineAssist",
        { "prompt": "Be as brief as possible " }
      ],
      "space r": "projects::OpenRecent"
    }
  },
  {
    "context": "Editor && mode == full && inline_completion",
    "bindings": {
      "tab": "editor::AcceptInlineCompletion",
      "shift-tab": "editor::AcceptPartialInlineCompletion"
    }
  },
  {
    "context": "vim_mode == visual",
    "bindings": {
      "escape": ["vim::SwitchMode", "Normal"],
      //Yank
      "y": "vim::VisualYank",
      "shift-y": "vim::VisualYank",
      //Delete
      "d": "vim::VisualDelete",
      "shift-d": "vim::VisualDeleteLine",
      //Paste
      "p": [
        "vim::Paste",
        {
          "preserveClipboard": true
        }
      ],
      //Change
      "c": "vim::Substitute",
      "shift-c": "vim::SubstituteLine",
      //Indent outdent
      ">": "vim::Indent",
      "<": "vim::Outdent",
      //G actions
      "g c": "vim::ToggleComments",

      "space i a": [
        "assistant::InlineAssist",
        { "prompt": "Be as brief as possible " }
      ],

      "space i s": [
        "assistant::InlineAssist",
        { "prompt": "Be as brief as possible Simplify this code" }
      ],

      "space i f": [
        "assistant::InlineAssist",
        { "prompt": "Be as brief as possible Finish this code" }
      ]
    }
  },
  {
    "context": "Editor && vim_mode == insert",
    "bindings": {
      "escape": ["vim::SwitchMode", "Normal"],
      "j k": ["vim::SwitchMode", "Normal"],
      "enter": "editor::Newline",
      "alt-f": "editor::ShowCompletions"
    }
  },
  {
    "context": "AssistantPanel && vim_mode == insert",
    "bindings": {
      "enter": "assistant::Assist"
    }
  },
  {
    "context": "vim_mode == insert && !showing_completions",
    "bindings": {
      "alt-h": "editor::MoveLeft",
      "alt-j": "editor::MoveDown",
      "alt-k": "editor::MoveUp",
      "alt-l": "editor::MoveRight"
    }
  },
  {
    "context": "vim_mode == replace",
    "bindings": {
      "escape": "vim::NormalBefore"
    }
  },
  {
    "context": "vim_operator == d",
    "bindings": {
      "d": "vim::CurrentLine"
    }
  },
  {
    "context": "vim_mode == waiting",
    "bindings": {
      "tab": "vim::Tab",
      "enter": "vim::Enter",
      "escape": "vim::ClearOperators"
    }
  },
  {
    "context": "vim_mode == operator",
    "bindings": {
      "escape": "vim::ClearOperators"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "ctrl-shift-c": "editor::Copy",
      "ctrl-shift-v": "editor::Paste"
    }
  },
  {
    "context": "Editor && renaming",
    "bindings": {
      "enter": "editor::ConfirmRename"
    }
  },
  {
    "context": "AssistantPanel",
    "bindings": {
      "ctrl-enter": "assistant::Assist",
      "enter": "assistant::Assist",
      "alt-;": "assistant::ToggleModelSelector"
    }
  },
  {
    "context": "ProjectPanel && not_editing",
    "bindings": {
      "h": "project_panel::CollapseSelectedEntry",
      "j": "menu::SelectNext",
      "k": "menu::SelectPrev",
      "d d": "project_panel::Delete",
      "l": "project_panel::OpenPermanent",
      "a f": "project_panel::NewFile",
      "a d": "project_panel::NewDirectory",
      "r": "project_panel::Rename"
    }
  },
  {
    "context": "BufferSearchBar && !in_replace",
    "bindings": {
      "enter": "vim::SearchSubmit",
      "escape": "buffer_search::Dismiss"
    }
  },
  {
    "context": "Editor && showing_completions",
    "bindings": {
      "tab": "editor::ConfirmCompletion",
      "enter": "editor::ConfirmCompletion",
      "escape": "editor::Cancel"
    }
  },
  {
    "context": "Editor && (showing_code_actions || showing_completions)",
    "bindings": {
      "alt-j": "editor::ContextMenuNext",
      "alt-k": "editor::ContextMenuPrev"
    }
  },
  {
    "context": "Terminal",
    "bindings": {
      "ctrl-t": "workspace::NewTerminal",
      "ctrl-w": "pane::CloseActiveItem"
    }
  },
  {
    "context": "EmptyPane || SharedScreen",
    "bindings": {}
  }
]
