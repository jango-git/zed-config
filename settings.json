// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "base_keymap": "None",
  "relative_line_numbers": true,
  "tab_size": 2,
  "vim_mode": true,
  "vim": {
    "use_smartcase_find": true,
    "use_system_clipboard": "always"
  },
  "vertical_scroll_margin": 8,
  "cursor_blink": false,
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "tab_bar": {
    "show": true
  },
  "theme": {
    "mode": "system",
    "dark": "Andromeda",
    "light": "One Light"
  },
  "scrollbar": {
    "show": "never"
  },
  "terminal": {
    "button": false
  },
  // "notification_panel": {
  //   "button": false
  // },

  // "assistant": {
  //   "button": false
  // },
  // "chat_panel": {
  //   "button": false
  // },

  "project_panel": {
    "default_width": 350,
    "scrollbar": {
      "show": "never"
    }
  },
  "outline_panel": {
    "default_width": 350,
    "button": false
  },
  "collaboration_panel": {
    "default_width": 350,
    "button": false
  },
  "soft_wrap": "editor_width",
  "languages": {
    "JSON": {
      "format_on_save": "off"
    }
  }
}
